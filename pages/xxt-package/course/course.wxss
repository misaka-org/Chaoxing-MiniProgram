/* pages/course/course.wxss */

.box {
    margin: 0rpx;
}

.course-item {
    margin: 30rpx;
    min-height: 100rpx;
    box-shadow: 3rpx 3rpx 12rpx rgba(0, 0, 0, 0.15);
    background-color: white;
    border-radius: 20rpx;
    padding: 30rpx;
    display: flex;
}

.inside-title {
    color: gray;
}

.course-item-image {
    width: 60px;
    height: 60px;
}

.course-item-info {
    margin: 0rpx 20rpx;
    max-width: 450rpx;
}

.course-item-title {
    font-size: 30rpx;
    display: block;
    margin-bottom: 10rpx;
}

.course-item-other {
    color: gray;
    font-size: 24rpx;
    display: block;
}